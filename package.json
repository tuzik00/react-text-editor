{
  "name": "react-txt-editor",
  "description": "React text editor with output state in markdown",
  "version": "1.0.18",
  "license": "MIT",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/tuzik00/react-txt-editor.git"
  },
  "homepage": "https://github.com/tuzik00/react-txt-editor#readme",
  "scripts": {
    "storybook": "start-storybook -p 6006 -s public",
    "build-storybook": "build-storybook -o storybook-static",
    "build": "ttsc --incremental",
    "lint": "eslint \"./src/**/*.{ts,tsx}\"",
    "tsc": "tsc --noEmit",
    "prepare": "husky install",
    "deploy": "run-s deploy:*",
    "deploy:clean": "rimraf build && rimraf storybook-static",
    "deploy:test": "yarn lint && yarn tsc",
    "deploy:storybook": "yarn build-storybook && gh-pages -d storybook-static",
    "deploy:app": "ttsc --incremental && yarn publish"
  },
  "lint-staged": {
    "*.(js|jsx|ts|tsx)": "eslint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "@emotion/css": "^11.5.0",
    "@emotion/react": "^11.7.1",
    "@emotion/server": "^11.4.0",
    "@emotion/styled": "^11.6.0",
    "@mui/icons-material": "^5.2.5",
    "@mui/material": "^5.2.6",
    "draft-js": "^0.11.7",
    "draftjs-utils": "^0.10.2",
    "immutable": "^4.0.0-rc.12",
    "lodash": "^4.17.21",
    "nanoid": "^3.1.30",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-markdown": "^7.1.2",
    "react-outside-click-handler": "^1.3.0",
    "react-scripts": "^5.0.0",
    "remark-gfm": "^3.0.1",
    "remarkable": "^2.0.1",
    "use-debounce": "^6.0.0",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^6.4.9",
    "@storybook/addon-essentials": "^6.4.9",
    "@storybook/addon-links": "^6.4.9",
    "@storybook/addons": "^6.4.9",
    "@storybook/builder-webpack5": "^6.4.9",
    "@storybook/manager-webpack5": "^6.4.9",
    "@storybook/node-logger": "^6.4.9",
    "@storybook/preset-create-react-app": "^4.0.0",
    "@storybook/react": "^6.4.9",
    "@storybook/theming": "^6.4.9",
    "@types/draft-js": "^0.10.44",
    "@types/lodash": "^4.14.178",
    "@types/node": "^16.11.17",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "@types/react-outside-click-handler": "^1.3.1",
    "@types/remarkable": "^2.0.3",
    "@typescript-eslint/eslint-plugin": "^5.8.0",
    "@typescript-eslint/parser": "^5.8.0",
    "eslint": "^8.5.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^16.1.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "gh-pages": "^3.2.3",
    "husky": "^7.0.0",
    "lint-staged": "^11.2.6",
    "npm-run-all": "^4.1.5",
    "react-app-rewired": "^2.1.9",
    "rimraf": "^3.0.2",
    "ttypescript": "^1.5.13",
    "typescript": "^4.5.4",
    "typescript-transform-paths": "^3.3.1",
    "webpack": "^5.65.0"
  }
}
